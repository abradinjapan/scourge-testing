[
    Run Tests
]

[ main ]
scourge.main()() = {
    [ announce testing start ]
    scourge.set("Testing parser!%0a;")(message)
    scourge.print.buffer_as_string(message)()

    [ call first test ]
    test_parser.hello_world()()
}

[ test parser generator ]
test_parser.hello_world()() = {
    [ setup file paths ]
    scourge.set("./tests/data/basic_test_parser.json")(file_path.json)
    scourge.set("./tests/generate_parser.scourge")(file_path.generator)

    [ get json file ]
    scourge.file_to_buffer(file_path.json)(json)

    [ run test ]
    scourge.just_run.one_file(file_path.generator, json)(compilation.error, program.result, program.error)

    [ print pointers ]
    scourge.print.buffer(program.error)()
}
